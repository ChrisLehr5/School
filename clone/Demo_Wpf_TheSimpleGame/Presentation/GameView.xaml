                Grid.Column="5" 
                Click="GameBoard_Click"  
                Opacity="0"/>

                        <Ellipse 
                Grid.Row="2" 
                Grid.Column="6" 
                Fill="{Binding CurrentBoard[2][6]}"               
                Stroke="Black"/>
                        <Button 
                Tag="26" 
                Grid.Row="2" 
                Grid.Column="6" 
                Click="GameBoard_Click"  
                Opacity="0"/>

                        <Ellipse 
                Grid.Row="3" 
                Grid.Column="0" 
                Fill="{Binding CurrentBoard[3][0]}"               
                Stroke="Black"/>
                        <Button 
                Tag="30" 
                Grid.Row="3" 
                Grid.Column="0" 
                Click="GameBoard_Click"  
                Opacity="0"/>


                        <Ellipse 
                Grid.Row="3" 
                Grid.Column="1" 
