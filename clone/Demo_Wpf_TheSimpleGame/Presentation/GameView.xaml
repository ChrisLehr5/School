                Grid.Column="2" 
                Click="GameBoard_Click"  
                Opacity="0"/>

                        <Ellipse 
                Grid.Row="6" 
                Grid.Column="3" 
                Fill="{Binding CurrentBoard[6][3]}"               
                Stroke="Black"/>
                        <Button 
                Tag="63" 
                Grid.Row="6" 
                Grid.Column="3" 
                Click="GameBoard_Click"  
                Opacity="0"/>

                        <Ellipse 
                Grid.Row="6" 
                Grid.Column="4" 
                Fill="{Binding CurrentBoard[6][4]}"               
                Stroke="Black"/>
                        <Button 
                Tag="64" 
                Grid.Row="6" 
                Grid.Column="4" 
                Click="GameBoard_Click"  
                Opacity="0"/>

                        <Ellipse 
                Grid.Row="6" 
                Grid.Column="5" 
                Fill="{Binding CurrentBoard[6][5]}"               
                Stroke="Black"/>
                        <Button 
                Tag="65" 
                Grid.Row="6" 
                Grid.Column="5" 
                Click="GameBoard_Click"  
                Opacity="0"/>

                        <Ellipse 
                Grid.Row="6" 
                Grid.Column="6" 
